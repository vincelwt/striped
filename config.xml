<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vincelwt.striped" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Striped</name>
    <description>
        A simple dashboard for Stripe
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Vincent L.
    </author>
	
	<icon src="icon.png" />
	
	<icon src="res/mdpi.png" density="mdpi" />
	<icon src="res/hdpi.png" density="hdpi" />
	<icon src="res/xhdpi.png" density="xhdpi" />
	<icon src="res/xxhdpi.png" density="xxhdpi" />
	<icon src="res/xxxhdpi.png" density="xxxhdpi" />
	
    <content src="index.html" />
    <preference name="StatusBarBackgroundColor" value="#35aebe" />


    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
